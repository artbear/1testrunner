{
    "version": "2.0.0",
    "windows": {
        "command": "cmd",
        "args": ["/c", "chcp", "65001", ">nul", "&"]
    },
    "linux": {
        "command": "sh",
        "args": ["-c"]
    },
    "tasks": [
        {
            "label": "1testrunner: Testing project",
            "type": "shell",
            "args": [
                "oscript",
                "${workspaceRoot}/src/main.os",
                "-runall",
                "${workspaceRoot}/tests"
            ],
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "{Модуль\\s+(.+)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+([^{]*)",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "1testrunner: Test current test-file",
            "type": "shell",
            "args": [
                "oscript",
                "${workspaceRoot}/src/main.os",
                "-run",
                "${file}"
            ],
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "{Модуль\\s+(.+)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+([^{]*)",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "Opm: package build",
            "type": "shell",
            "args": [
                "opm",
                "build",
                "${workspaceRoot}"
            ],
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "{Модуль\\s+(.+)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+([^{]*)",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "OneScript: compile",
            "type": "shell",
            "args": [
                "oscript",
                "-compile",
                "${file}",
                "-env=${workspaceRoot}/src/main.os"
            ],
            "problemMatcher": []
        },
        {
            "label": "OneScript: check",
            "type": "shell",
            "args": [
                "oscript",
                "-check",
                "${file}",
                "-env=${workspaceRoot}/src/main.os"
            ],
            "problemMatcher": []
        },
        {
            "label": "OneScript: make",
            "type": "shell",
            "args": [
                "oscript",
                "-encoding=utf-8",
                "-make",
                "${file}",
                "${fileBasename}.exe"
            ],
            "problemMatcher": []
        },
        {
            "label": "OneScript: run",
            "type": "shell",
            "args": [
                "oscript",
                "-encoding=utf-8",
                "${file}"
            ],
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^{Модуль\\s+(.*)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+(.*)}$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            },
            "group": {
                "_id": "build",
                "isDefault": false
            }
        }
    ]
}